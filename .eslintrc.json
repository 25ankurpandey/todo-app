{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended", 
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-unreachable": "warn",
        "eqeqeq": "warn",
        "max-depth": ["warn", 5],
        "max-lines": ["warn", 1000],
        "max-lines-per-function": ["warn", 100],
        "max-nested-callbacks": ["warn", 4],
        "max-params": ["warn", 5],
        "no-case-declarations": "warn",
        "max-len":["warn",130]
    }
}