  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.16",
    "@types/cls-hooked": "^4.3.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.8.10",
    "@types/nodemon": "^1.19.1",
    "@types/request-ip": "^0.0.37",
    "@types/request-promise": "^4.1.48",
    "@types/sinon": "^17.0.3",
    "@types/superagent": "^4.1.15",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.27.0",
    "cpx": "^1.5.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^10.4.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "prettier": "^2.8.0",
    "request-promise": "^4.2.6",
    "sinon": "^17.0.1",
    "swagger-jsdoc-generator": "^1.0.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [
      ".ts"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "src/controllers",
      "src/bootstrap.ts",
      "src/index.ts",
      "src/validators",
      "src/db-Initialization",
      "src/cron.ts",
      "src/repositories",
      "src/models",
      "src/constants",
      "src/utils",
      "src/ioc"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 90,
    "functions": 90,
    "branches": 70,
    "lines": 90
  },
  "report-dir": "coverage"
}
