{
  "name": "todo-svc",
  "version": "1.0.0",
  "description": "TODO backend service to provide CRUD fuctionalities",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist/src/index.js",
    "dev-start": "nodemon --exec ts-node -r dotenv/config ./src/index.ts",
    "dockerbuild": "rm -rf ./dist && mkdir -p ./dist & tsc --outDir ./dist",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "mocha -r ts-node/register test/services/UserService.test.ts && mocha -r ts-node/register test/services/TaskService.test.ts",
    "serve-cron": "node dist/src/cron.js",
    "serve-cron-ts": "tsc && node dist/src/cron.js",
    "generate-docs": "swagger-jsdoc-generator swagger-config.ts > apidoc.json",
    "test:coverage": "nyc npm run test"
  },
  "author": "Ankur Pandey",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/sequelize": "^4.28.14",
    "aerospike": "^5.12.1",
    "await-to-js": "^3.0.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.0",
    "chai": "^4.4.1",
    "child_process": "^1.0.2",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-request-audit": "^1.0.3",
    "form-data": "^4.0.0",
    "formidable": "^2.1.1",
    "inversify": "^6.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.4.3",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.9.13",
    "path": "^0.12.7",
    "query-string": "^7.1.1",
    "rebuild": "^0.1.2",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.2.0",
    "sequelize": "^6.25.3",
    "sequelize-cli": "^6.5.1",
    "superagent": "^7.1.6",
    "superagent-retry": "^0.6.0",
    "swagger-ui-express": "^4.5.0",
    "ts-node": "^10.9.1",
    "tsoa": "^4.1.1",
    "uuid": "^8.3.2",
    "uuidv4": "^6.2.13",
    "winston": "^3.7.2"
